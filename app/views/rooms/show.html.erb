<h1>Rooms#show 登録済みのルーム情報を見る</h1>
<p>Find me in app/views/rooms/show.html.erb</p>

<table>
      <tr>
        <th>ルーム画像</th>
        <td><%= @room.room_image %></td>
      </tr>
      <tr>
        <th>ルーム名</th>
        <td><%= @room.room_name %></td>
      </tr>
      <tr>
        <th>ルーム紹介</th>
        <td><%= @room.room_introduction %></td>
      </tr>
      <tr>
        <th>料金</th>
        <td><%= @room.price %></td>
      </tr>
      
      <tr>
        <th>作成日</th>
        <td><%= @room.updated_at %></td>
      </tr>
      
</table>
 
    <div>
      <ul>
        <li><%= link_to "ルーム登録一覧に戻る", :rooms %></li>
      </ul>
    </div>



<h3>新規投稿内容</h3>
 
 <%= form_with model: @post do |f| %>
   <table>
     <tr>
       <th><%= f.label :content, "投稿内容" %></th>
       <td><%= f.text_area :content, class:"posts-content" %></td>
     </tr>
   </table>
   <%= f.hidden_field :user_id, value: @room.id %>
   <div>
     <ul>
       <li><%= f.submit "投稿を完了する"%></li>
     </ul>
   </div>
 <% end %>
