<h1>ルーム登録のページ views/rooms/index</h1>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>


<table>
      <thead>
        <tr>
          <th>id</th>
          <th>ルーム名</th>
          <th>参照</th>
          
        </tr>
      </thead>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.id %></td>
            <td><%= room.room_name %></td>
            
            <td>
              <%= link_to "参照", room %>
　　　　　　</td>
            
          </tr>
        <% end %>
      </tbody>
</table>

<p><%= link_to "ルームを新規登録する", :new_room %></p>

<h3>投稿一覧</h3>
 
 <table>
   <thead>
     <tr>
       <th>投稿内容</th>
       <th>更新日時</th>
       <th>投稿日時</th>
       <th>投稿者(User_id)</th>
     </tr>
   </thead>
   
    
   <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= post.content %></td>
         <td><%= post.updated_at.to_s(:datetime_jp) %></td>
         <td><%= post.created_at.to_s(:datetime_jp) %></td>
         <td><%= post.user_id %></td>
       </tr>
     <% end %>
   </tbody>
   
 </table>
 
 <p><%= link_to "ユーザー新規登録", :new_room %></p>

